- if @restaurants.any?
  - @restaurants.each do |restaurant|
    = link_to "#{restaurant.name}: #{restaurant.description}", restaurant_path(restaurant)
    = link_to "Review", new_restaurant_review_path(restaurant)
    = link_to "Edit", edit_restaurant_path(restaurant)
    = link_to "Delete", restaurant_path(restaurant), method: :delete
- else
  %h1 No restaurants yet!

=link_to "Add a restaurant", new_restaurant_path
